{
    "@context": [
      "https://www.w3.org/2019/wot/td/v1",
      {
        "sosa": "http://www.w3.org/ns/sosa/",
        "ssn": "http://www.w3.org/ns/ssn/",
        "td": "https://www.w3.org/2019/wot/td#",
        "ex": "http://wotpyrdfsetup.org/device/"
      }
    ],
    "id": "urn:uuid:123e4567-e89b-12d3-a456-426614174000",
    "title": "Datastore",
    "description": "Um datastore WoT que armazena observações usando as ontologias SOSA/SSN",
    "securityDefinitions": {
      "nosec_sc": {
        "scheme": "nosec"
      }
    },
    "security": ["nosec_sc"],
    "td:affordance": [
      {
        "@type": ["sosa:Observation", "ssn:System"],
        "name": "Criar Observação",
        "description": "Adiciona uma nova observação ao datastore",
        "forms": [
          {
            "href": "http://localhost:9494/observations",
            "contentType": "application/json",
            "op": "invokeaction",
            "htv:methodName": "POST"
          }
        ],
        "input": {
          "type": "object",
          "properties": {
            "resultTime": {
              "type": "string",
              "format": "date-time",
              "description": "O tempo em que a observação foi realizada"
            },
            "hasResult": {
              "type": "number",
              "description": "O valor resultante da observação"
            },
            "observes": {
              "type": "string",
              "description": "O fenômeno observado"
            }
          },
          "required": ["resultTime", "hasResult", "observes"]
        }
      },
      {
        "@type": ["sosa:ObservationCollection"],
        "name": "Listar Observações",
        "description": "Obtém todas as observações armazenadas no datastore",
        "forms": [
          {
            "href": "http://localhost:9494/observations",
            "contentType": "application/json",
            "op": "readproperty",
            "htv:methodName": "GET"
          }
        ]
      },
      {
        "@type": ["ssn:Device"],
        "name": "Informações do Datastore",
        "description": "Recupera informações sobre o datastore",
        "forms": [
          {
            "href": "http://localhost:9494/",
            "contentType": "application/json",
            "op": "readproperty",
            "htv:methodName": "GET"
          }
        ]
      }
    ]
  }
  